<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.motion.widget.MotionLayout

        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_splash"
        app:layoutDescription="@xml/screen_home_xml_constraintlayout2_scene">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_top_20">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ImageRoundTop20" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motionLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@color/black"
            android:elevation="1dp"
            android:visibility="gone">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_user_tutorial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_30dp"
                android:src="@drawable/ic_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctn_info_user_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_5dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_user_tutorial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_user_tutorial"
                app:layout_constraintTop_toTopOf="@+id/img_user_tutorial">

                <TextView
                    android:id="@+id/txt_user_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/super_corn"
                    android:text="MEE"
                    android:alpha="0"
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_diamond_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_31dp"
                    android:fontFamily="@font/super_corn"
                    android:text="5"
                    android:alpha="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_38sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_user_tutorial"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_diamond_tutorial"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:src="@drawable/ic_diamond"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.9"
                    app:layout_constraintStart_toEndOf="@id/txt_diamond_tutorial"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.1" />


                <TextView
                    android:id="@+id/txt_crown_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_57dp"
                    android:layout_marginEnd="@dimen/_30dp"
                    android:drawablePadding="@dimen/_10dp"
                    android:fontFamily="@font/super_corn"
                    android:text="15"
                    android:alpha="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_38sp"
                    app:drawableEndCompat="@drawable/ic_crown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ic_diamond_tutorial"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_rounded"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/ic_round"
                android:translationY="-3dp"
                android:translationX="-3dp"
                app:layout_constraintStart_toStartOf="@id/img_user_tutorial"
                app:layout_constraintTop_toTopOf="@id/img_user_tutorial" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:translationX="63dp"
                android:translationY="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_rounded" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/super_corn"
                android:text="@string/click_here_to_edit_personal_information"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:translationY="@dimen/_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_arrow" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/logo_toturial"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:src="@drawable/logo_tutorial"
                android:translationY="35dp"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4" />
            <TextView
                android:id="@+id/btn_play_now_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp"
                android:background="@drawable/bg_button_home"
                android:drawablePadding="10dp"
                android:fontFamily="@font/super_corn"
                android:gravity="center"
                android:alpha="0"
                android:paddingHorizontal="@dimen/_30dp"
                android:paddingVertical="@dimen/_15dp"
                android:text="@string/play_now"
                android:textColor="@color/white"
                android:textSize="@dimen/_40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ctn_info_user_tutorial" />

            <TextView
                android:id="@+id/btn_leader_board_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70dp"
                android:background="@drawable/bg_button_home"
                android:drawablePadding="10dp"
                android:fontFamily="@font/super_corn"
                android:gravity="center"
                android:paddingVertical="@dimen/_15dp"
                android:paddingStart="@dimen/_70dp"
                android:paddingEnd="@dimen/_30dp"
                android:alpha="0"
                android:text="@string/leader_board"
                android:textColor="@color/white"
                android:textSize="@dimen/_40sp"
                app:drawableEndCompat="@drawable/ic_cup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_play_now_tutorial" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctn_down_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:layout_constraintBottom_toBottomOf="parent">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:alpha="0.5"
                    android:background="#E5F6FD"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_custom_tutorial"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="80dp"
                    android:src="@drawable/ic_custom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.9"
                    android:alpha="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.2" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_setting_tutorial"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_80dp"
                    android:src="@drawable/ic_setting"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_32dp"
            android:src="@drawable/logo"
            android:translationY="-10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_30dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctn_info_user"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/bg_info_home"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_user"
            app:layout_constraintTop_toTopOf="@+id/img_user">

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/super_corn"
                android:text="MEE"
                android:textColor="@color/white"
                android:textSize="38sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_31dp"
                android:fontFamily="@font/super_corn"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/_38sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_user"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_diamond"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_12dp"
                android:src="@drawable/ic_diamond"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.9"
                app:layout_constraintStart_toEndOf="@id/txt_diamond"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1" />


            <TextView
                android:id="@+id/txt_crown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_57dp"
                android:layout_marginEnd="@dimen/_30dp"
                android:drawablePadding="@dimen/_10dp"
                android:fontFamily="@font/super_corn"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="@dimen/_38sp"
                app:drawableEndCompat="@drawable/ic_crown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_diamond"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/btn_play_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:background="@drawable/bg_button_home"
            android:drawablePadding="10dp"
            android:fontFamily="@font/super_corn"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_30dp"
            android:paddingVertical="@dimen/_15dp"
            android:text="@string/play_now"
            android:textColor="@color/white"
            android:textSize="@dimen/_40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ctn_info_user" />

        <TextView
            android:id="@+id/btn_leader_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70dp"
            android:background="@drawable/bg_button_home"
            android:drawablePadding="10dp"
            android:fontFamily="@font/super_corn"
            android:gravity="center"
            android:paddingVertical="@dimen/_15dp"
            android:paddingStart="@dimen/_70dp"
            android:paddingEnd="@dimen/_30dp"
            android:text="@string/leader_board"
            android:textColor="@color/white"
            android:textSize="@dimen/_40sp"
            app:drawableEndCompat="@drawable/ic_cup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_play_now" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctn_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="parent">

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50dp"
                android:alpha="0.5"
                android:background="#E5F6FD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_custom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="80dp"
                android:src="@drawable/ic_custom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_setting"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_80dp"
                android:src="@drawable/ic_setting"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>