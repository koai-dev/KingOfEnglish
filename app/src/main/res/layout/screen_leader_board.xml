<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/ctn_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_leaderboard"
        app:layoutDescription="@xml/screen_leader_board_scene">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_64dp"
            android:layout_height="@dimen/_68dp"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_32dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctn_leaderboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/ctn_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_dialog"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10dp"
                android:paddingVertical="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share" />
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_ring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_ring"
                    app:layout_constraintEnd_toEndOf="@+id/img_banner"
                    app:layout_constraintStart_toStartOf="@+id/img_banner"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ctn_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/img_banner"
                    app:layout_constraintStart_toStartOf="@+id/img_banner"
                    app:layout_constraintTop_toBottomOf="@id/txt_leader_board">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:src="@drawable/img_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:src="@drawable/img_star" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_70dp"
                    android:src="@drawable/img_banner"
                    app:layout_constraintTop_toTopOf="@id/img_ring" />

                <ImageView
                    android:id="@+id/img_cup"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginTop="@dimen/_17dp"
                    android:src="@drawable/ic_cup"
                    app:layout_constraintBottom_toBottomOf="@id/img_ring"
                    app:layout_constraintEnd_toEndOf="@id/img_ring"
                    app:layout_constraintStart_toStartOf="@id/img_ring"
                    app:layout_constraintTop_toTopOf="@+id/img_ring" />

                <TextView
                    android:id="@+id/txt_leader_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/super_corn"
                    android:gravity="center"
                    android:text="LEADER BOARD"
                    android:textColor="#443405"
                    android:textSize="@dimen/_32sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_banner"
                    app:layout_constraintEnd_toEndOf="@id/img_banner"
                    app:layout_constraintStart_toStartOf="@id/img_banner"
                    app:layout_constraintTop_toTopOf="@id/img_banner" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ctn_top_123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ctn_banner">


                <LinearLayout
                    android:id="@+id/ctn_top_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_70dp"
                            android:src="@drawable/img_test"
                            app:layout_constraintEnd_toEndOf="@id/img_ring_top_2"
                            app:layout_constraintStart_toStartOf="@id/img_ring_top_2"
                            app:layout_constraintTop_toTopOf="@id/img_ring_top_2"
                            app:shapeAppearanceOverlay="@style/roundedTips" />

                        <ImageView
                            android:id="@+id/img_ring_top_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_ring_top_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/txt_top_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/super_corn"
                        android:text="TOP 2"
                        android:textColor="#D9D9D9"
                        android:textSize="@dimen/_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/super_corn"
                        android:text="elsa"
                        android:textColor="#D9D9D9"
                        android:textSize="@dimen/_24sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ctn_top_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_30dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img_top_1"
                            android:layout_width="@dimen/_80dp"
                            android:layout_height="@dimen/_80dp"
                            android:src="@drawable/img_test"
                            app:layout_constraintEnd_toEndOf="@id/img_ring_top_1"
                            app:layout_constraintStart_toStartOf="@id/img_ring_top_1"
                            app:layout_constraintTop_toTopOf="@id/img_ring_top_1"
                            app:shapeAppearanceOverlay="@style/roundedTips" />

                        <ImageView
                            android:id="@+id/img_ring_top_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_ring_top_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/txt_top_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/super_corn"
                        android:text="TOP 1"
                        android:textColor="#D9D9D9"
                        android:textSize="@dimen/_40sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/super_corn"
                        android:text="EMILY"
                        android:textColor="#D9D9D9"
                        android:textSize="@dimen/_24sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ctn_top_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img_top_3"
                            android:layout_width="@dimen/_60dp"
                            android:layout_height="@dimen/_60dp"
                            android:layout_marginBottom="19dp"
                            android:src="@drawable/img_test"
                            android:translationY="-2dp"
                            app:layout_constraintEnd_toEndOf="@id/img_ring_top_3"
                            app:layout_constraintStart_toStartOf="@id/img_ring_top_3"
                            app:layout_constraintTop_toTopOf="@id/img_ring_top_3"
                            app:shapeAppearanceOverlay="@style/roundedTips" />

                        <ImageView
                            android:id="@+id/img_ring_top_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_ring_top_3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/txt_top_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20dp"
                        android:fontFamily="@font/super_corn"
                        android:text="TOP 3"
                        android:textColor="#D9D9D9"
                        android:textSize="@dimen/_25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/super_corn"
                        android:text="JOHN"
                        android:textColor="#D9D9D9"
                        android:textSize="@dimen/_24sp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_high_rank"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/ctn_bot_rank"
                app:layout_constraintTop_toBottomOf="@id/ctn_top_123"
                tools:listitem="@layout/item_leader_board" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha="0.6"
                android:background="#0C1B51"
                app:layout_constraintBottom_toBottomOf="@id/ctn_bot_rank"
                app:layout_constraintEnd_toEndOf="@id/ctn_bot_rank"
                app:layout_constraintStart_toStartOf="@id/ctn_bot_rank"
                app:layout_constraintTop_toTopOf="@id/ctn_bot_rank" />

            <LinearLayout
                android:id="@+id/ctn_bot_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txt_bot_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_14dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/super_corn"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="235"
                    android:textColor="#FFCA28"
                    android:textSize="@dimen/_32sp"
                    app:drawableEndCompat="@drawable/ic_crown" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_bot_avt"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginStart="@dimen/_14dp"
                    android:layout_marginTop="@dimen/_9dp"
                    android:layout_marginBottom="@dimen/_9dp"
                    android:src="@drawable/img_test"
                    app:layout_constraintEnd_toEndOf="@id/img_ring_top_3"
                    app:layout_constraintStart_toStartOf="@id/img_ring_top_3"
                    app:layout_constraintTop_toTopOf="@id/img_ring_top_3"
                    app:shapeAppearanceOverlay="@style/roundedTips" />

                <TextView
                    android:id="@+id/txt_bot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:fontFamily="@font/super_corn"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="KOE number 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sp" />

                <TextView
                    android:id="@+id/txt_bot_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/super_corn"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="40,5k"
                    android:textColor="#BCFAFC"
                    android:textSize="@dimen/_32sp"
                    app:drawableEndCompat="@drawable/ic_diamond" />>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>