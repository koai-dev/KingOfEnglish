<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".ui.dialog.DialogProfile">

        <LinearLayout
            android:id="@+id/ctn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_40dp"
            android:paddingHorizontal="@dimen/_40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_70dp"
                android:fontFamily="@font/super_corn"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="#0C1B51"
                android:textSize="@dimen/_24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20dp"
                        android:fontFamily="@font/super_corn"
                        android:text="BGM"
                        android:textColor="#0C1B51"
                        android:textSize="@dimen/_24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20dp"
                        android:fontFamily="@font/super_corn"
                        android:text="Sound effect"
                        android:textColor="#0C1B51"
                        android:textSize="@dimen/_24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20dp"
                        android:fontFamily="@font/super_corn"
                        android:text="VIBRATE"
                        android:textColor="#0C1B51"
                        android:textSize="@dimen/_24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/super_corn"
                        android:text="Report"
                        android:textColor="#0C1B51"
                        android:textSize="@dimen/_24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20dp"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_19dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_dialog_setting"
                        android:padding="@dimen/_5dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/_16dp"
                            android:layout_height="@dimen/_16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bgm" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_18dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_dialog_setting"
                        android:padding="@dimen/_5dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/_16dp"
                            android:layout_height="@dimen/_16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_sound" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="19dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_dialog_setting"
                        android:padding="@dimen/_5dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/_16dp"
                            android:layout_height="@dimen/_16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_vibrate" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_dialog_setting"
                        android:padding="@dimen/_5dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/_16dp"
                            android:layout_height="@dimen/_16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_report" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_32dp"
                    android:fontFamily="@font/super_corn"
                    android:textSize="12sp"
                    android:text="@string/term"
                    android:textColor="#0C1B51" />

                <TextView
                    android:id="@+id/txt_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/super_corn"
                    android:textSize="12sp"
                    android:text="@string/privacy_policy"
                    android:textColor="#0C1B51" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/super_corn"
                android:text="version: 1.0"
                android:textSize="12sp"
                android:textColor="#0C1B51"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:alpha="0.5"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:padding="@dimen/_5dp"
            android:src="@drawable/ic_close"
            android:translationY="@dimen/_5dp"
            app:layout_constraintBottom_toTopOf="@id/ctn_dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ctn_dialog" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>