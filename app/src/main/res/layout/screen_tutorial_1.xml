<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:background="#B3000000">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_user_tutorial"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_rounded"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_round"
            app:layout_constraintBottom_toBottomOf="@+id/img_user_tutorial"
            app:layout_constraintEnd_toEndOf="@+id/img_user_tutorial"
            app:layout_constraintStart_toStartOf="@id/img_user_tutorial"
            app:layout_constraintTop_toTopOf="@id/img_user_tutorial" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_arrow_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            app:layout_constraintStart_toEndOf="@+id/img_rounded"
            app:layout_constraintTop_toBottomOf="@id/img_rounded" />

        <TextView
            android:id="@+id/txt_tutorial_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/super_corn"
            android:text="@string/click_here_to_edit_personal_information"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toBottomOf="@id/img_arrow_1"
            app:drawableEndCompat="@drawable/img_cat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>